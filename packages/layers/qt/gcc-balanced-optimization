COMMON_FLAGS="-march=x86-64 -O2 -pipe -fomit-frame-pointer -g0 -ffunction-sections -fdata-sections -flto -fno-plt"

CFLAGS="${COMMON_FLAGS}"
CXXFLAGS="${COMMON_FLAGS}"
FCFLAGS="${COMMON_FLAGS}"
FFLAGS="${COMMON_FLAGS}"

CC="gcc"
CXX="g++"
AR="gcc-ar"
NM="gcc-nm"
RANLIB="gcc-ranlib"

LDFLAGS="-Wl,-O2 -Wl,--gc-sections -Wl,--as-needed -flto"
